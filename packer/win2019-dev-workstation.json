{
    "variables": {
      "profile": "default"
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "region": "us-east-1",
        "profile": "{{ user `profile`}}",
        "instance_type": "t2.micro",
        "user_data_file": "unattended/bootstrap.txt",
        "communicator": "winrm",
        "winrm_username": "Administrator",
        "winrm_timeout": "15m",
        "ami_name": "windows_dev_workstation_{{timestamp}}",
        "shutdown_behavior": "terminate",
        "run_tags": {
          "Base_AMI_Name": "{{ .SourceAMIName }}",
          "Name": "bake-windows-dev-workstation-{{ timestamp }}",
          "Environment": "{{user `profile` }}",
          "Version": "{{ timestamp }}",
          "Automation": "packer"
        },
        "tags": {
          "OS": "windows",
          "Release": "2019 Core",
          "Base_AMI_Name": "{{ .SourceAMIName }}",
          "Name": "win19-dev-workstation-{{ timestamp }}",
          "Environment": "{{ user `profile` }}",
          "Version": "{{ timestamp }}",
          "Automation": "packer"
        },
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "Windows_Server-2019-English-Full-Base-*",
            "root-device-type": "ebs"
          },
          "owners": [
            "801119661308"
          ],
          "most_recent": true
        }
      }
    ],
    "provisioners": [
      {
        "type": "powershell",
        "scripts": [
          "./scripts/disable-uac.ps1",
          "./scripts/choco.ps1"
        ]
      },
      {
        "type": "powershell",
        "inline": [
          "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SendWindowsIsReady.ps1 -Schedule",
          "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
          "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
        ],
        "only": [
          "amazon-ebs"
        ]
      }
    ]
  }